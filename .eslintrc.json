{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier",
        "plugin:prettier/recommended"
    ],	
    "env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
	},
    "rules": {
        "prettier/prettier": ["error", { "printWidth": 100 }],
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-var-requires": "off"
    }
}