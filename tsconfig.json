{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["src/@types", "node_modules/@types"],
  },
  "include": [
    "src/**/*.ts"
, "scripts/deploy-commands.js"  ],
  "exclude": [
    "node_modules"
  ]
}